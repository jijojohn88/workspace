class TreeNode:
    def __init__(self, value):
        self.key = value
        self.left = None
        self.right = None
def height(root):
    if not root:
        return 0
    
    left = height(root.left)
    right = height(root.right)
    
    return max(left,right)+1

root = TreeNode(3)
root.left=TreeNode(2)
root.left.left=TreeNode(1)

print("height of the tree = " , height(root))